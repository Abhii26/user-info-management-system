<%- include("./layout/newheader") %>

<div class="container">
    <div class="row justify-content-center"> <!-- Center the row -->
        <div class="col-md-6" > <!-- Limit width and center the column -->
            <% if (message) { %>
                <div class="alert alert-primary alert-dismissible fade show alert-<%= message.type %>" role="alert" >
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  <strong class=><%= message.message %></strong>
                </div>
                <% } %>
                

            <h2 class="text-center">Edit User</h2> <!-- Center the heading -->
            <form action="/edit/<%= user._id %>" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="page" value="<%= page || 1 %>"> 
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image (Optional: Leave blank to keep current image)</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                    <% if (user.image) { %>
                        <img src="/uploads/<%= user.image %>" width="100" height="100" alt="Current Image" class="mt-2 "> <!-- Center the image -->
                    <% } else { %>
                        <p class="mt-2 text-center">No image uploaded yet.</p> <!-- Center the text -->
                    <% } %>
                </div>
                <div class="text-center"> <!-- Center the buttons -->
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="/users" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("./layout/newfooter") %>